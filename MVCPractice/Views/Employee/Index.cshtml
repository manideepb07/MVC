@model MVCPractice.Models.EmployeeModels

@{
    ViewBag.Title = "Employee Details";
}

<h2>Employee Details</h2>

<table style="font-family:'Comic Sans MS'">
    <tr>
        <td><b>
            Employee ID:
            </b></td>
        <td>@Model.EmployeeID</td>
    </tr>
    <tr>
        <td><b>
            Name:
            </b></td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td><b>City: </b></td>
        <td>@Model.City</td>
    </tr>
    <tr>
        <td><b>Sex:</b></td>
        <td>@Model.sex</td>
    </tr>
</table>
